---
// src/components/Pagination.astro
const { currentPage, totalPages, onPageChange } = Astro.props;

const pages = Array.from({ length: totalPages }, (_, i) => i + 1);
---

<nav>
  <ul>
    {pages.map(page => (
      <li>
        <a href={`/?page=${page}`} onClick={() => onPageChange(page)} class={page === currentPage ? 'active' : ''}>
          {page}
        </a>
      </li>
    ))}
  </ul>
</nav>

<style>
  .active {
    font-weight: bold;
  }
</style>